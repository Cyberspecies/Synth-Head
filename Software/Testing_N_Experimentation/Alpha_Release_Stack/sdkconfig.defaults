# Synth-Head GPU SDK Configuration
# Disables task watchdog for main loop flexibility

# Disable task watchdog
CONFIG_ESP_TASK_WDT_EN=n

# Flash size
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_PARTITION_TABLE_CUSTOM=n
# Disable mbedTLS certificate bundle (fixes PlatformIO/ESP-IDF 5.5.0 build issue)
CONFIG_MBEDTLS_CERTIFICATE_BUNDLE=n
CONFIG_MBEDTLS_CERTIFICATE_BUNDLE_DEFAULT_FULL=n
CONFIG_MBEDTLS_CERTIFICATE_BUNDLE_DEFAULT_CMN=n