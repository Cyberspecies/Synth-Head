# Synth-Head CPU SDK Configuration (16MB Flash)
# For ESP32-S3-WROOM-1U-N16

# Disable task watchdog
CONFIG_ESP_TASK_WDT_EN=n

# Increase main task stack size for heavy boot sequence
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# Flash size - 16MB
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="16MB"

# Custom partition table
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions_16MB.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions_16MB.csv"

# FAT Filesystem - Enable Long Filename support
# CRITICAL: Must explicitly disable LFN_NONE to enable long filenames
CONFIG_FATFS_LFN_NONE=n
CONFIG_FATFS_LFN_HEAP=y
CONFIG_FATFS_MAX_LFN=255
